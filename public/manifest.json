{
  "manifest_version": 3,
  "name": "TMD â€” Twitter Media Downloader",
  "description": "Download content you like from Twitter with 1-click",
  "version": "4.5.0",
  "author": "rodrigo.palomares@itium.mx",
  "homepage_url": "https://github.com/1618033/TwitterMediaDownloader.git",
  "icons": {
    "128": "128.png",
    "16": "16.png",
    "48": "48.png",
    "96": "96.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "css": [
        "tmd.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/content_script.js"
      ],
      "matches": [
        "*://twitter.com/*",
        "*://mobile.twitter.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://*.twitter.com/*",
    "*://*.twimg.com/*"
  ]
}
